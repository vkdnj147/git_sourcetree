<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
	prefHeight="500" prefWidth="300">
	<VBox alignment="CENTER">

		<padding>
			<Insets top="20" bottom="20" />
		</padding>

		<Label text="직원 등록" />
		<spacing>10</spacing>
		<Separator prefWidth="400"></Separator>


		<fx:define>
			<ToggleGroup fx:id="sectionGroup" />
		</fx:define>

		<HBox alignment="CENTER">
			<padding>
				<Insets top="5" right="10" bottom="5" left="10" />
			</padding>

			<Label text="직급 : " />
			<spacing>10</spacing>
			<RadioButton fx:id="rbEmployee" userData="employee"
				text="직원" toggleGroup="$sectionGroup" />
			<RadioButton fx:id="rbTimer" userData="timer"
				text="파트타이머" toggleGroup="$sectionGroup" />
		</HBox>



		<HBox alignment="CENTER">
			<children>
				<VBox>
					<padding>
						<Insets top="20" right="10" bottom="10" left="10" />
					</padding>
					<children>

						<Label text="사 원 번 호 : " />

						<Label text="이    름 : " />

						<Label text="아 이 디 : " />

						<Label text="비 밀 번 호 : " />
						<Label text="비밀번호 확인 : " />
						<Label text="핸 드 폰 : " />
						<Label text="은 행 명 : " />
						<Label text="계 좌 번 호 : " />
						<Label text="주 소 : " />
						<Label text="입 사 일 : " />
						<Label text="퇴 사 일 : " />
						<Label text="재직 여부 : " />
					</children>
				</VBox>
				<VBox>
					<padding>
						<Insets top="5" right="10" bottom="5" left="10" />
					</padding>
					<TextField fx:id="txtem_No" promptText="임의입력" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Name" promptText="10자이내" />
					<spacing>5</spacing>

					<TextField fx:id="txtem_Id" promptText="20자이내" />
					<spacing>5</spacing>

					<PasswordField fx:id="txtPasswdRepeat" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Phone" promptText="'-' 빼고 입력" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Bank" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Account" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Address" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Entry" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Leaveday" />
					<spacing>5</spacing>
					<TextField fx:id="txtem_Whether" />
					<spacing>5</spacing>
				</VBox>


			</children>
		</HBox>

		<HBox alignment="CENTER">

			<padding>
				<Insets top="20" right="10" bottom="20" left="10" />
			</padding>
			<spacing>20</spacing>
			<Button fx:id="btnIdCheck" text="ID 체크" />
			<spacing>5</spacing>

			<Button fx:id="btnJoin" text="등록" layoutX="150.0"
				layoutY="750.0" />

			<Button fx:id="btnCancel" text="취소" layoutX="250.0"
				layoutY="750.0" />
		</HBox>
	</VBox>

</AnchorPane>
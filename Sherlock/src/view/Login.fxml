<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.LoginController">
	<VBox alignment="CENTER">
		<HBox>
			<VBox alignment="CENTER">
				<padding>
					<Insets top="20" right="10" bottom="20" left="10" />
				</padding>
				<spacing>10</spacing>
				<ImageView pickOnBounds="true" preserveRatio="true"
					fx:id="iconImg">
					<image>
						<Image url="@../image/manager33.png" />
					</image>
				</ImageView>

			</VBox>
			<VBox alignment="CENTER">
				<padding>
					<Insets top="20" right="10" bottom="20" left="10" />
				</padding>
				<spacing>10</spacing>
				<children>
					<Label text=" 관 리 자 로 그 인 " fx:id="lblLogin" />

					<HBox alignment="CENTER">
						<Label text="아 이 디 : " />
						<TextField fx:id="txtId" />
					</HBox>
					<HBox alignment="CENTER">
						<Label text="비밀번호: " />
						<PasswordField fx:id="txtPassword" />
					</HBox>
					<HBox alignment="CENTER">
						<padding>
							<Insets top="20" right="10" bottom="20" left="10" />
						</padding>
						<spacing>5</spacing>
						<Button fx:id="btnJoin" text="관리자 등록" />
						<Button fx:id="btnLogin" text="관리자 로그인" />
						<Button fx:id="btnCancel" text="종료" />
					</HBox>

				</children>

			</VBox>
		</HBox>
		<VBox alignment="CENTER">
			<padding>
				<Insets top="20" right="10" bottom="20" left="10" />
			</padding>
			<spacing>10</spacing>
			<ImageView pickOnBounds="true" preserveRatio="true"
				fx:id="iconImg">
				<image>
					<Image url="@../image/manager2.png" />
				</image>
			</ImageView>

		</VBox>
	</VBox>

</AnchorPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Cell?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
	prefHeight="600" prefWidth="900"
	fx:controller="controller.TotalSaleController">
	<VBox>
		<VBox>
			<padding>
				<Insets top="10" right="5" bottom="20" left="10" />
			</padding>
			<Label text="today 매출 목록" layoutX="30.0" layoutY="30.0" />
			<spacing>10</spacing>
			<Separator prefWidth="300"></Separator>
			<HBox>
				<Label layoutX="450.0" layoutY="54.0" />
				<Label fx:id="lblCount" text="" layoutX="450.0" layoutY="54.0" />
				<TableView fx:id="todaySaleTableView" layoutX="10.0"
					layoutY="80.0" prefHeight="240" prefWidth="653">
				</TableView>
			</HBox>
			<HBox>
				<Label text="총매출액: " layoutX="45.0" layoutY="455.0" />
				<TextField layoutX="100.0" layoutY="450.0"
					fx:id="txtDaytotal" prefWidth="150.0" />
				<Label text="원" layoutX="252.0" layoutY="455.0" />

			</HBox>

		</VBox>
		<VBox>
			<VBox>

				<padding>
					<Insets top="10" right="5" bottom="20" left="10" />
				</padding>
				<Label text="전체 매출 목록" layoutX="50.0" layoutY="30.0" />
				<spacing>10</spacing>
				<Separator prefWidth="300"></Separator>
				<HBox>
					<!-- 기간조회 -->
					<Label layoutX="320.0" layoutY="85.0" text="기간 :" />
					<DatePicker layoutX="355.0" layoutY="85.0"
						fx:id="dpStart" prefWidth="125.0" />
					<Label text="~" layoutX="485.0" layoutY="85.0" />
					<DatePicker layoutX="500.0" layoutY="85.0" fx:id="dpEnd"
						prefWidth="125.0" />
					<Button layoutX="630.0" layoutY="85.0" fx:id="btnSearch"
						text="조회" />

					<Button fx:id="btnTotal" text="전체" layoutX="70.0"
						layoutY="50.0" />

					<Label layoutX="450.0" layoutY="54.0" />
					<Label fx:id="lblCount" text="" layoutX="450.0"
						layoutY="54.0" />


					<!-- <Label text=" 예약 날짜 : " /> <DatePicker fx:id="dpDate"></DatePicker> -->

				</HBox>
				<TableView fx:id="totalSaleTableView" layoutX="10.0"
					layoutY="80.0" prefHeight="250" prefWidth="653">
				</TableView>
				
			</VBox>
			<HBox>
				<Label text="총매출액: " layoutX="45.0" layoutY="455.0" />
				<TextField layoutX="100.0" layoutY="450.0"
					fx:id="txtDaytotal1" prefWidth="150.0" />
				<Label text="원" layoutX="252.0" layoutY="455.0" />

			</HBox>
		</VBox>
	</VBox>
</AnchorPane>